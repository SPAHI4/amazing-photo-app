{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "module": "NodeNext",
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "declarationDir": "dist",
    "composite": true,
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules"],
  "include": ["types/**/*.d.ts", "src/**/*", "scripts/**/*", ".eslintrc.cjs", "log-error.js"]
}
