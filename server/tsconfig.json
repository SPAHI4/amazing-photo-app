{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "lib": ["es2022"],
    "module": "NodeNext",
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "declarationDir": "dist"
  },
  "exclude": ["node_modules"],
  "include": [
    "types/**/*.d.ts",
    "src/**/*",
    "scripts/**/*",
    "*.json",
    ".eslintrc.cjs",
    "log-error.js"
  ],
}
