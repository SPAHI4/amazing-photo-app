{
  "name": "@app/db",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "gm": "NODE_OPTIONS=\"--import @app/config/dist/env.js\" graphile-migrate",
    "watch": "pnpm gm watch --once",
    "commit": "pnpm gm commit",
    "uncommit": "pnpm gm uncommit",
    "migrate": "pnpm gm migrate",
    "setup-test-db": "pnpm gm reset --shadow --erase && pnpm gm watch --once --shadow",
    "test": "IN_TESTS=1 NODE_ENV=test pnpm setup-test-db && NODE_OPTIONS=\"--import @app/config/dist/env.js\" jest --testLocationInResults"
  },
  "dependencies": {
    "@app/config": "workspace:*",
    "graphile-migrate": "^1.4.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/pg": "^8.10.2",
    "jest": "^29.6.4",
    "jest-github-reporter": "^1.1.1",
    "pg": "^8.11.1",
    "ts-jest": "^29.1.1"
  }
}
