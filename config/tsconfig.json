{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2022"],
    "module": "NodeNext",
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "composite": true,
    "declarationDir": "dist",
  },
  "exclude": ["node_modules"],
  "include": [
    "*.ts",
    ".eslintrc.cjs"
  ]
}
